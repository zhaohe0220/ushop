@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
@using Common;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/Index.css" rel="stylesheet" />
    <style type="text/css">
       
           
    </style>
</head>
<body>
    <div class="about">
        <div class="about_title"><h3>相关类别：</h3></div>
        <div class="about_list"> <ul>
@foreach (Model.Nav about in (List<Model.Nav>)ViewData["about"])
        {
                                     <li><a href="/List/SIndex?id=@about.id">@about.name</a></li>}</ul></div>
        <div class="clear"></div>
    </div>
   
    <div id="content">
        @if (ViewData["list"] != null)
{
            <div class="item">
  
        @foreach (Model.ProductInfo productInfo in (List<Model.ProductInfo>)ViewData["list"])
        {
          
            <div class="list_img_box">
                <a href="/List/Detail?proid=@productInfo.ProductID" target="_blank"><img src="@productInfo.ProductImageAdd" alt="" /></a>
                <div class="list_price">
                    <h1>￥@productInfo.Price</h1>
                </div>
                <div class="list_title">
                    <a href="/List/Detail?proid=@productInfo.ProductID" target="_blank">@productInfo.ProductName</a>
                </div>
                </div>

        }<div class="clear"></div>
        <p class="page">
         @MvcHtmlString.Create(PageBar.GetPageBar(ViewData["id"].ToString(), (int)ViewData["pageIndex"], (int)ViewData["pageCount"]))
        </p>
      </div>} else { <div class="nolist">暂无数据</div>}
    </div>
</body>
</html>
