    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/Content/img/ico.ico">
    <link rel="bookmark" href="~/Content/img/ico.ico" />
    <title>滨购网-登录</title>
    <link href="~/Content/css/Index.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="http://siteapp.baidu.com/static/webappservice/uaredirect.js" type="text/javascript"></script><script type="text/javascript">uaredirect("http://siteapp.baidu.com/webapp/www.bingowang.com","http://www.bingowang.com");</script>
    <script type="text/javascript">
       
        $(function () {
            $("#login").click(function () {
                $(".wait").css("display", "block");
                $("#login").css("display", "none");
            })
        });

         function changeCode() {
                  $("#img").attr("src", $("#img").attr("src") + 1);
         }
         var url = document.referrer.toString();
         var currentUrl = window.location.href;
         function afterLogin(data) {
            var serverData=data.split(':')
            if (serverData[0] == "ok") {
                if (url == currentUrl) {
                    window.location.href = "Index/Index";
                } else {
                    window.location.href = url;
                }
                
            } else if (serverData[0] == "no") {
                $("#mes").text(serverData[1]);
                changeCode();
                $(".wait").css("display", "none");
                $("#login").css("display", "block");
            } else {
                $("#mes").text("系统繁忙！");
                $(".wait").css("display", "none");
                $("#login").css("display", "block");
            }
         }
   
    </script>
    @*站长统计*@
